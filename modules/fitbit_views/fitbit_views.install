<?php
/**
 * @file
 *
 * Install related hooks.
 */

/**
 * Implements hook_requirements().
 */
function fitbit_views_requirements($phase) {
  $requirements = [];
  if ($phase == 'install' && \Drupal::moduleHandler()->moduleExists('fitbit_views_example')) {
    $requirements['fitbit_views_unique'] = [
      'title' => t('Fitbit views modules do not work together'),
      'description' => t('Fitbit views module cannot be used with Fitbit views example module. Uninstall Fitbit views example module before proceeding.'),
      'severity' => REQUIREMENT_ERROR,
    ];
  }
  return $requirements;
}
